<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <!-- Attempting to rewrite medicine recipes from Medieval Medicines to use alcohol varieties available in MO and MorrowRim Alcohol Remade -->
  
  <!-- Applies to all med recipes -->
  <RecipeDef Name="Joe_MedBase" Abstract="True">
	  <workSpeedStat>DrugCookingSpeed</workSpeedStat>
	  <workSkill>Crafting</workSkill>
	  <workSkillLearnFactor>1</workSkillLearnFactor>
	  <effectWorking>Smith</effectWorking>
	  <allowMixingIngredients>false</allowMixingIngredients>	
	  <soundWorking>Recipe_Smith</soundWorking>
		  <recipeUsers>
			<li>DankPyon_Workbench</li>
        		<li>CraftingSpot</li>
		  </recipeUsers>	  
  </RecipeDef>	
  
  <!--Early Medieval Medicine -->
  
  <RecipeDef ParentName="Joe_MedBase">
    <defName>RecMedicineEarlyMedievalMM</defName>
    <label>Make Early Medieval Medicine</label>
    <description>A box containing various herbs, tinctures, a trepanation kit, and strips of clean cloth.</description>
    <jobString>Making Early Medieval Medicine.</jobString>
  	<workAmount>700</workAmount>
		<ingredients>
			 <li>
			 	<filter>
			    		<thingDefs>
           			   		<li>MedicineHerbal</li>
					</thingDefs>
			 	</filter>
			 	<count>2</count>
			 </li>
	       		 <li>
         			<filter>
          				<thingDefs>
             					<li>Cloth</li>
           				</thingDefs>
         			</filter>
        			<count>10</count>
       			</li>
		</ingredients>
    		<products>
      			<MedicineEarlyMedievalMM>1</MedicineEarlyMedievalMM>
    		</products>
   		<fixedIngredientFilter>			
			<thingDefs>
				<li>MedicineHerbal</li>
        			<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
    	<researchPrerequisites>
			<li>EarlyMedievalMedicine</li>
	</researchPrerequisites>
</RecipeDef>
  
   <!--Late Medieval Medicine -->
	
<RecipeDef ParentName="Joe_MedBase">
    <defName>RecMedicineLateMedievalMM</defName>
    <label>Make Late Medieval Medicine</label>
    <description>A doctor's kit containing a wide variety of herbs and tinctures, a medical manuscript, alcohol-soaked bandages, and various complex tools for cutting and releasing pressure.</description>
    <jobString>Making Late Medieval Medicine.</jobString>
  	<workAmount>1000</workAmount>
		<ingredients>
			 <li>
			 	<filter>
			    		<thingDefs>
           			   		<li>MedicineEarlyMedievalMM</li>
					</thingDefs>
			 	</filter>
			 	<count>1</count>
			 </li>
	       		 <li>
         			<filter>
          				<thingDefs>
             					<li>Cloth</li>
           				</thingDefs>
         			</filter>
        			<count>5</count>
       			</li>
			 <li>
			 	<filter>
			    		<thingDefs>
           			   		<li>DankPyon_Ale</li>
						<li>DankPyon_Cider</li>
						<li>DankPyon_Mead</li>
						<li>DankPyon_Wine</li>
						<li>Beer</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_CyrodiilicBrandy</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_DagothBrandy</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Flin</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Greef</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_VintageGreef</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Mazte</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Shein</li>
						<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Sujamma</li>
						<li MayRequire="OksarPotocki.VanillaFactionsExpanded.MedievalModule">VFEM_Wine</li>
						<li MayRequire="OskarPotocki.VanillaFactionsExpanded.SettlersModule">Chemshine</li>
						<li MayRequire="OskarPotocki.VFE.Vikings">VFEV_Mead</li>
					</thingDefs>
			 	</filter>
			 	<count>1</count>
			 </li>
		</ingredients>
    		<products>
      			<MedicineLateMedievalMM>1</MedicineLateMedievalMM>
    		</products>
   		<fixedIngredientFilter>			
			<thingDefs>
				<li>MedicineEarlyMedievalMM</li>
        			<li>Cloth</li>
				<li>DankPyon_Ale</li>
				<li>DankPyon_Cider</li>
				<li>DankPyon_Mead</li>
				<li>DankPyon_Wine</li>
				<li>Beer</li>     
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_CyrodiilicBrandy</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_DagothBrandy</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Flin</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Greef</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_VintageGreef</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Mazte</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Shein</li>
				<li MayRequire="SirMashedPotato.MorrowRim.AlcoholRemade">MorrowRim_Sujamma</li>
				<li MayRequire="OksarPotocki.VanillaFactionsExpanded.MedievalModule">VFEM_Wine</li>
				<li MayRequire="OskarPotocki.VanillaFactionsExpanded.SettlersModule">Chemshine</li>
				<li MayRequire="OskarPotocki.VFE.Vikings">VFEV_Mead</li>
			</thingDefs>
		</fixedIngredientFilter>
    	<researchPrerequisites>
			<li>LateMedievalMedicine</li>
	</researchPrerequisites>
</RecipeDef>
	
